         combo_boot_left{
            timeout-ms = <30>;
	    key-positions = <3 4>;
            bindings = <&bootloader>;
            layers = <BT>;
        };
         combo_boot_right{
            timeout-ms = <30>;
	    key-positions = <5 6>;
            bindings = <&bootloader>;
